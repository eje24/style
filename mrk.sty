\newcommand{\newpset}{
    \ifbool{mrk@pset@standalone}{}{
        \newpage\stepcounter{currentpset}
        \setcounter{currentproblem}{0}
        \vspace*{5mm}
        {\noindent\sffamily\bfseries\Huge$\spadesuit ${\, Problem Set \thecurrentpset}\newline}
